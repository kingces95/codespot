#!/usr/bin/env bash
source /dev/stdin < <(cli loader)

help() {
    cat << EOF
Command
    area .dir

Summary
    Command line tool for computing the areas of shapes.

Global Arguments
    --help -h        [Flag] : Show this message and exit.
    --self-test      [Flag] : Runs a self test.
EOF
}

attributes() {
    cat << EOF
version 0.1.0
licence MIT
description Area computer.
EOF
}

AREA_PI='3.14159'

main() {
    cli::export area
}

area::multiply() {
    echo "$1 * $2" | bc -l
}

area::square() {
    echo "$1 * $1" | bc -l
}

self_test() {
    source /dev/stdin < <(cli_assert)
}

cli::load "$@"