#!/usr/bin/env bash
source /dev/stdin < <(cli shim)
. $(dirname ${BASH_SOURCE})/vscs.sh

help() (
util::unindent << EOF
    Command
        vscs ps : Yield the pid of a running Visual Studio Code Server.

    Arguments
        --commit -c     [Required]  : Commit to uninstall. (e.g. d2e414d9e4239a252d1ab117bd7067f125afd80a)
        --build -b      [Required]  : Server build flavor. Allowed values: stable,
                                        insiders. Default: stable.

    Global Arguments
        --help -h                   : Show this message and exit.
        --run-as                    : User account under which to execute the command.

    Debug Arguments
        --debug -x                  : Echo the commands being executed.
        --dry-run                   : Show the commands that would be run.
EOF
)

main() {
    local server_dir
    local commit_dir

    vscs::declare_dirs
    : ${server_dir:?}
    : ${commit_dir:?}

    util::unindent << EOF | util::source
    read pid reply < <(ps ax | grep "${commit_dir}/server.sh" | grep -v grep)
    echo "\${pid}"
EOF
}

shim "$@"