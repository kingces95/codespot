#!/usr/bin/env bash
source /dev/stdin < <(cli loader)

help() (
util::unindent << EOF
    Command
        app group create : Create a resource group.

    Arguments
        --name                  : Name of resource group.
        --location              : Location of resource group.
        --interval              : The polling interval in seconds. Default: 5.
EOF
)

declareArgs $@
    
: ${name:?}
: ${location:?}
: ${interval:=5}

tput clear
tput sc
while true
do
    tput rc
    uptime
    az group list \
        --output table \
        --query "[?name=='$name'].{ \
            name:name, \
            location:location, \
            status:properties.provisioningState
        }" 

    if ! azx resource test \
        --resource-group $name \
        --type $AZX_TYPE_RESOURCE_GROUP \
        --query name \
        --value $name
    then
        azx::log group create \
            --name $name \
            --location $location >&2
    fi

    sleep $interval
done