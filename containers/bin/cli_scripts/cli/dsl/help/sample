#!/usr/bin/env bash
. $(dirname ${BASH_SOURCE})/../../../util.sh

help() {
 util::unindent << EOF
    Command
        cmd banana slip : Slip on a banana.

    Arguments
        --run-as                : Run as the specified user.
                                --ignore-me -i.
        --fruit                 : Run elevated. Default: banana. Allowed
                                values: orange, banana. Stuff. Allowed ish.

    Global Arguments
        --debug -d   [Required] : Debug the script. --ignore-me -i.
        --help -h               : Show this message and exit.

    Examples
        --ignore-me -i [Required] : Default 10.
EOF
}

main() {
    echo "whoami=$(whoami)"
    (declare -p | grep ARG_)
    while read; do echo "${REPLY}"; done
}

test() {
    return
}

util::main "$@"