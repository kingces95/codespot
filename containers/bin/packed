#!/usr/bin/env bash
::foo() {
help() {
cat << EOF
Arguments
    --zap   : An argument.
EOF
}

main() {
    echo ::foo ${arg_zap}
}

cli::load "$@"
}

::group::bar() {
help() {
cat << EOF
Arguments
    --zap   : An argument.
EOF
}

main() {
    echo ::group::bar ${arg_zap}
}

cli::load "$@"
}

source /dev/stdin < <(cli .shim)
source /dev/stdin < <(cli loader)
cli::load "$@"
